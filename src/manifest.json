{
	"manifest_version": 2,

	"name": "RightTasks for Gmailâ„¢",
	"description": "Adds your Google Tasks to a right sidebar in Gmail, like in Google Calendar.",
	"version": "2.2",
	
	"icons": {
		"16": "gmail-righttasks-icon-16.png",
		"48": "gmail-righttasks-icon-48.png",
		"128": "gmail-righttasks-icon-128.png"
	},

	"permissions": [
		"https://mail.google.com/"
	],

	"content_scripts": [
		{
			"matches": [ "https://mail.google.com/*" ],
			"css": [ "gmail-righttasks.css" ],
			"js": [ "gmail-righttasks.js" ]
		}
	],

	"web_accessible_resources": [ "gmail-righttasks.css" ]

}
